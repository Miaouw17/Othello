<Page x:Class="Othello.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Othello"
      mc:Ignorable="d" 
      Height="Auto" Width="Auto"
      Title="Game" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" SizeChanged="Page_SizeChanged">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="boardColumn"/>
            <ColumnDefinition x:Name="infoColumn"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border x:Name ="board_Border" Grid.Column="0" Grid.Row="0" Height="Auto" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="2" Margin="5"> 
            <Grid x:Name="Board" ShowGridLines="False" Button.Click="Board_MouseDown">
                <Grid.ColumnDefinitions>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                </Grid.RowDefinitions>
            </Grid>
        </Border>
        <Grid x:Name="infoGrid" Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Label x:Name="LabelJ1" Grid.Column="0" Grid.Row="0" Content="White score : "/>
            <Label x:Name="ScoreJ1" Grid.Column="1" Grid.Row="0" Content="ScoreJ1" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label x:Name="LabelJ2" Grid.Column="0" Grid.Row="1" Content="Black score : "/>
            <Label x:Name="ScoreJ2" Grid.Column="1" Grid.Row="1" Content="ScoreJ2" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="buttonSave" Grid.Column="0" Grid.Row="2" Content="Sauvegarder" Width="75" Click="SaveGame_Click"/>
            <Button x:Name="buttonBack" Grid.Column="1" Grid.Row="2" Content="Retour" Click="BackMenu_Click"/>
        </Grid>
    </Grid>
</Page>
