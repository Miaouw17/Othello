<Page x:Class="Othello.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Othello"
      mc:Ignorable="d" 
      Height="Auto" Width="Auto"
      Title="Menu" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label x:Name="Title" Content="Othello" HorizontalAlignment="Center" VerticalAlignment="Top"></Label>
        <Button x:Name="NewGame" Content="Nouvelle Partie" VerticalAlignment="Center" HorizontalAlignment="Center" Click="NewGame_Click"></Button>
        <Button x:Name="LoadGame" Content="Charger Partie" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoadGame_Click"></Button>
    </StackPanel>
</Page>
